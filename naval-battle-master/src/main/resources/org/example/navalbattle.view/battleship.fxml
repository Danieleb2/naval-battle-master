<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.navalbattle.controller.BattleshipController">
    <top>
        <HBox spacing="10" alignment="CENTER">
            <Label text="Battleship Game"/>
        </HBox>
    </top>
    <center>
        <VBox fx:id="boardContainer" spacing="10" alignment="CENTER" BorderPane.alignment="CENTER">
            <!-- Aquí se insertarán los tableros del juego -->
        </VBox>
    </center>
    <bottom>
        <HBox spacing="10" alignment="CENTER" padding="10">
            <Button text="Start Game" onAction="#handleStartGame"/>
        </HBox>
    </bottom>
</BorderPane>